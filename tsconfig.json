{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "svg-morpheus-vue": ["./lib/src/index.ts"],
      "svg-morpheus-vue/*": ["./lib/src/*"]
    }
  },
  "include": [
    "app/**/*",
    "lib/**/*"
  ],
  "references": [
    { "path": "./app" },
    { "path": "./lib" }
  ]
} 